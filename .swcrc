{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "baseUrl": "./",
    "parser": {
      "syntax": "typescript",
      "decorators": false
    },
    "target": "es2022",
    "keepClassNames": true,
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    },

    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "module": {
    "type": "es6",
    "strict": true,
    "importInterop": "swc",
    "resolveFully": false
  }
}
